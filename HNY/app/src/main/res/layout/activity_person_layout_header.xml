<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundDark">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imv_actor"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:src="@drawable/s2" />

    <LinearLayout
        android:background="@drawable/background_person_lighter_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@id/imv_actor">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Robert Downey Jr"
            android:textColor="@color/colorTextContent"
            android:textSize="42sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_date_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1965-04-04"
            android:textColor="@color/colorTextContent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_place_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Manhattan, New York City, New York, USA"
            android:textColor="@color/colorTextContent" />

        <android.support.v7.widget.AppCompatTextView
            android:background="@drawable/background_textview_known_as"
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actor"
            android:textColor="@color/colorTextContent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>