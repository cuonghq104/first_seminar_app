<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:background="@color/colorBackgroundDark">

    <android.support.v7.widget.AppCompatImageView
        android:scaleType="centerCrop"
        android:id="@+id/imv_movie"
        android:src="@drawable/actor"
        android:layout_width="180dp"
        android:layout_height="240dp" />

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imv_movie"
        android:layout_width="180dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:maxLines="1"
            android:maxWidth="180dp"
            android:id="@+id/tv_movie"
            android:text="Avenger: End game"
            android:textStyle="bold"
            android:textColor="@color/colorTextContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:maxLines="1"
            android:id="@+id/tv_role"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryText"
            android:drawableStart="@drawable/ic_person_pin_black_24dp"
            android:drawableTint="@color/colorPrimary"
            android:drawablePadding="10dp"
            android:text="Iron man / Tony Stark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>